generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model member {
  member_id Int @id @default(autoincrement())
  email     String @unique
  name      String?
  role      Role  @default(MEMBER)
}

model activity_category {
  category_id  Int  @id @default(autoincrement())
  title        String
  activity     activity[]
}

model activity {
  activity_id   Int @id @default(autoincrement())
  title         String
  category      activity_category @relation(fields: [category_id], references: [category_id])
  category_id   Int
}

model activity_tracking {
  member_id   Int
  activity_id Int
  set_id      Int
  sets        actviity_tracking_set[] 

  @@id(name: "member_activity", fields:[member_id, activity_id])
}

model actviity_tracking_set {
  set_id      Int @id @default(autoincrement())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  weight      Int?
  reps        Int?
  incline     Int?
  speed       Int?
  time        Int?
  distance    Int?

  tracking activity_tracking @relation(fields: [member_id, activity_id], references: [member_id, activity_id])
  member_id   Int
  activity_id Int
}

enum Role {
  MEMBER
  ADMIN
}