{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "private": true,
  "exports": {
    "./styles.css": "./dist/index.css",
    "./button": "./src/button.tsx",
    "./card": "./src/card.tsx",
    "./code": "./src/code.tsx",
    "./wt-modal": "./src/wt-modal.tsx",
    "./activity-category-upsert-form": "./src/forms/activity-category/upsert-form.tsx",
    "./activity-category-delete-form": "./src/forms/activity-category/delete-form.tsx"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/index.css -o ./dist/index.css",
    "lint": "eslint . --max-warnings 0",
    "dev": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/typography": "^0.5.15",
    "@turbo/gen": "^2.3.3",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.14",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.23.8"
  }
}
