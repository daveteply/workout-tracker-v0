{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "type": "module",
  "private": true,
  "exports": {
    "./styles.css": "./dist/index.css",
    "./button": "./src/button.tsx",
    "./card": "./src/card.tsx",
    "./code": "./src/code.tsx",
    "./nav-link-button": "./src/nav-link-button.tsx",
    "./activity-category-form": "./src/activity-category.tsx"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/index.css -o ./dist/index.css",
    "lint": "eslint . --max-warnings 0",
    "dev": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "react": "^19.0.0-rc.1",
    "react-dom": "^19.0.0-rc.1",
    "zod": "^3.23.8"
  }
}
