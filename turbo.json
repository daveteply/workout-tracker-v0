{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "API_STRUCTURE_SCHEMA",
        "API_STRUCTURE_HOST",
        "API_STRUCTURE_PORT",
        "API_TRACKING_SCHEMA",
        "API_TRACKING_HOST",
        "API_TRACKING_PORT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
